<h1 align="center">All Categories</h1>
<div  class="center  ">
<p><%= link_to 'New Category?', new_category_path %></p>
	<% @categories.each do |category| %>
	<ul class="list">
		<div class="row">
			<div class=" col-md-4 ">
				<li class="card-title">
					<%= link_to "#{category.name}", category_path(category) %>
				    <small><%= pluralize(category.articles.count, "article") %></small>
               </li>
				
			</div>
		</div>
	</ul>
	<% end %>
	<div class="row list">
		<div class="offset-5">
			<li class="card-title">
		      <%= will_paginate %>
			</li>
        </div>
    </div>
</div>